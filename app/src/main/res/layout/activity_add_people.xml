<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDarkSwipe"
    tools:context=".AddPeople">


    <TextView
        android:id="@+id/heading_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="30dp"
        android:text="Employee Search"
        android:textColor="#ffa500"
        android:textSize="24sp" />

    <EditText
        android:id="@+id/et_search_field"
        android:layout_width="253dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="91dp"
        android:background="@drawable/search_layout"
        android:backgroundTint="#ffa500"
        android:drawableRight="@drawable/ic_search_black_24dp"
        android:ems="10"
        android:hint="Search here"
        android:inputType="textPersonName"
        android:paddingBottom="10dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="10dp"
        android:textColor="@color/colorPrimarySwipe"
        android:textColorHint="@color/colorPrimarySwipe"
        android:textCursorDrawable="@null"
        android:textSize="16sp" />


    <android.support.v7.widget.RecyclerView
        android:id="@+id/rvAddPeople"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/et_search_field"
        android:layout_marginTop="50dp"></android.support.v7.widget.RecyclerView>

</RelativeLayout>
